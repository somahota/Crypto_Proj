    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            Socket s1 = new Socket("localhost",1234);
            jLabel1.setText("Request accepted by ORG ABC");
            s1.close();
            }catch(Exception ex){}
    
        try{
            Socket so1 = new Socket("localhost",1111);
            DataInputStream dis=new DataInputStream(so1.getInputStream());  
            String  str=(String)dis.readUTF();  
            System.out.println("message= "+str);  
            jTextArea1.setText(str);
            so1.close();  
            }catch(Exception e){System.out.println(e);}  
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            Socket s2 = new Socket("localhost",2245);
            jLabel3.setText("Request accepted by ORG ABC");
            s2.close();
            }catch(Exception ex){}
        try{  
        ServerSocket ss=new ServerSocket(2222);  
        Socket so2=ss.accept();//establishes connection   
        DataInputStream dis=new DataInputStream(so2.getInputStream());  
        String  str=(String)dis.readUTF();  
        System.out.println("message= "+str); 
        jLabel5.setText("Victim count is:"+str);
        ss.close();  
        }catch(Exception e){System.out.println(e);}  
        
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            Socket s3 = new Socket("localhost",3356);
            jLabel6.setText("Request accepted by ORG ABC");
            s3.close();
            }catch(Exception ex){}
        try{  
        ServerSocket servs=new ServerSocket(3333);  
        Socket so3=servs.accept();//establishes connection   
        DataInputStream dis=new DataInputStream(so3.getInputStream());  
        String  dp_mean=(String)dis.readUTF();  
        System.out.println("message= "+dp_mean); 
        jLabel7.setText("Victim Mean Age is:"+dp_mean);
        servs.close();  
        }catch(Exception e){System.out.println(e);}  
    }                                        

